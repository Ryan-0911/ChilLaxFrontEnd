@using System.ComponentModel.DataAnnotations
@model ChilLaxFrontEnd.ViewModels.LoginViewModel
<div id="app">
    <div class="background"></div>
    <article>
    <div class="main container">
        <div class="row register-section">
            <div class="form-box register col-md-12 ">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h2>Sign Up</h2>
                    <h5>會員註冊</h5>
                    <div class="create-account">
                        <p>
                            已經有帳號?
                            @Html.ActionLink("進入會員登入", "Login",null,new {  @class = "login-link"  })
                            
                        </p>
                    </div>
                    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

                    <div class="input-box">
                        <span class="icon"><i class="bx bxs-user"></i></span>
                            @Html.TextBox("txtRegisterAccount", null, new { htmlAttributes = new { @class = "form-control",required = "required" } })
                        @Html.ValidationMessageFor(model => model.txtRegisterAccount)
                        @*<input type="text" required />*@
                        <label>帳號</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><i class="bx bxs-lock-alt"></i></span>
                            @Html.TextBox("txtRegisterPassword", null, new { htmlAttributes = new { @class = "form-control",required = "required" } })
                        @Html.ValidationMessageFor(model => model.txtRegisterPassword)
                        @*<input type="password" required />*@
                        <label>密碼</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><i class="bx bxs-lock-alt"></i></span>
                            @Html.TextBox("txtRegisterPasswordChk", null, new { htmlAttributes = new { @class = "form-control",required = "required" } })
                        @Html.ValidationMessageFor(model => model.txtRegisterPasswordChk)
                        @*<input type="password" required />*@
                        <label>確認密碼</label>
                    </div>
                    <button class="btn">註冊</button>
                    <div class="other-login">
                        <div class="divider">
                            <span class="line"></span>
                            <span class="divider-text">其他註冊方式</span>
                            <span class="line"></span>
                        </div>
                        <div class="other-login-wrapper">
                                <script src="https://accounts.google.com/gsi/client" async defer></script>
                                <div id="g_id_onload"
                                     data-client_id="24117042909-f73r9qksf4se9ka68pgdviie2ucsl4h4.apps.googleusercontent.com"
                                     data-login_uri="https://localhost:7189/Login/ValidGoogleLogin"
                                     data-auto_prompt="false">
                                </div>
                                <div class="g_id_signin"
                                     data-type="standard"
                                     data-size="large"
                                     data-theme="outline"
                                     data-text="sign_in_with"
                                     data-shape="rectangular"
                                     data-logo_alignment="left">
                                </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</article>
</div>

@section Scripts
{
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    
