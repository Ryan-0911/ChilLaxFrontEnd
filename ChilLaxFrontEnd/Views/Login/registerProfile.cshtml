@section Styles
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="~/css/accountStyle.css" rel="stylesheet">
}

<!-- LOGIN FORM CREATION -->
    <div class="background"></div>
    <article>
        <div class="main container">
            <div class="row profile-section">
                <div class="form-box login col-md-12">
                    @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                        <h2>填寫基本資料</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="inner-input">
                                <i class="fas fa-user"></i>
                                @*<input type="text" id="f-name" class="user_input" v-model="memberName"  required>*@
                            @Html.TextBox("memberName",null, new { htmlAttributes = new { @class = "user_input",required = "required"  } })
                                <label>姓名</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="inner-input">
                                <i class="fa-solid fa-phone"></i>
                            @*<input type="tel" id="phone_number" v-model="memberPhone" class="user_input" required>*@
                            @Html.TextBox("memberPhone", null,new { htmlAttributes = new { type = "tel", @class = "user_input", required = "required" } })

                                <label>手機號碼</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="inner-input">
                                <i class="fa-solid fa-envelope"></i>
                            @*<input type="email" id="email" v-model="memberEmail" class="user_input" required>*@
                            @Html.TextBox("memberEmail",null, new { htmlAttributes = new { @class = "user_input",required = "required"  } })

                                <label>信箱</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="inner-input">
                                <i class="fa-solid fa-children"></i>
                            @*<select v-model="memberGender" class="form-select" required="required">
                                    <option selected="selected" disabled>請選擇</option>
                                    <option label="男" value="0">男</option>
                                    <option label="女" value="1">女</option>
                                </select>*@
                            @Html.DropDownList("memberGender", new SelectList(new[]
                            {
                                new { Text = "男", Value = "0" },
                                new { Text = "女", Value = "1" }
                            }, "Value", "Text"), "-- 請選擇 --", new { @class = "form-select", required = "required" })

                                <label>性別</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="inner-input">
                                <i class="fa-solid fa-cake-candles"></i>
                            @*<input type="date" id="birth_date" v-model="memberBirth" placeholder=" " required>*@
                            @*@Html.TextBox("memberBirth", new { htmlAttributes = new { type = "date",@class = "memberBirth", required = "required" } })*@
                            @Html.TextBox("memberBirth", null, new { type = "date", @class = "memberBirth", required = "required" })

                            <label>生日</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="inner-input">
                                <i class="fa-solid fa-map-location-dot"></i>
                            @*<input type="text" id="address" v-model="memberAddress" class="user_input" required>*@
                            @Html.Editor("memberAddress",null, new { htmlAttributes = new { type = "text", @class = "form-control", placeholder = "", required = "required" } })

                                <label>通訊地址</label>
                            </div>
                        </div>
                        <button class="btn">下一步</button>
                    }
                </div>
            </div>
        </div>
    </article>
